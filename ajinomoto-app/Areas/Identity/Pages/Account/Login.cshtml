@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="create mt-5">
        <form id="account" method="post">
            <fieldset>

            <h3 class="text-center" >@ViewData["Title"]</h3>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.Email">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control tamaño" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" class="form-control tamaño" id="password"/>
                <input type="checkbox" onclick="mostrarPassword('password')">Mostrar contraseña
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3">
                <div class="checkbox">
                    <label class="form-label" asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        ¿Recordarme en este dispositivo?
                    </label>
                </div>
            </div>
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            </div>

           
           
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como un nuevo usuario</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
                </p>
            </div>
            </fieldset>
        </form>
</div>

<div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to log in.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
