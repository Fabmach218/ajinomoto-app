@model IEnumerable<ajinomoto_app.Models.Producto>

@{
    ViewData["Title"] = "Catálogo";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<section id="hero" class="d-flex align-items-center justify-content-center">

  <div class="container" data-aos="fade-up">

    <div class="row justify-content-center">
      <div class="col-xl-6 col-lg-8">
          <h1>CATÁLOGO</h1>
      </div>
    </div>



  </div>

</section>
<br>
<br>
<div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
        <div class="col">
            <div id="productos" class="mb-3">
                <div class="row">
                    @foreach (var item in Model){
                        <div class="col-sm-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="card-img-actions">
                                        <img class="img-responsive"
                                        src="@item.Imagen" alt="@item.Imagen"/>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <strong><center><h5 class="card-tittle" style="font-size: 30px;" >@Html.DisplayFor(modelItem => item.Nombre)</h5></center></strong>
                                  <center><p class="card-text" style="font-size: 20px; width: 80px;">@Html.DisplayFor(modelItem => item.Precio)</p></center>
                                    <center><a class="btn btn-primary" asp-action="Agregar" asp-route-id="@item.Id" style="font-size: 15px;" onclick="return alert('Producto agregado al carrito')">AGREGAR</a></center>
                              
                                    <br>
                                    <center><a class="btn btn-info" asp-action="Detalles" asp-route-id="@item.Id" style="font-size: 15px;" >DETALLES</a></center>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>