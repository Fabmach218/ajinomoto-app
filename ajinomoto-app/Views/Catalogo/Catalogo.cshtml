@model IEnumerable<ajinomoto_app.Models.Producto>

@{
    ViewData["Tittle"] = "Catalogo";
}

<h1>@ViewData["Tittle"]</h1>
<div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
        <div class="col">
            <div id="productos" class="mb-3">
                <div class="row">
                    @foreach (var item in Model){
                        <div class="col-sm-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="card-img-actions">
                                        <img class="img-responsive" width="90" height="140"
                                        src="/img/@item.Imagen" alt="@item.Imagen"/>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-tittle">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>
                                    <a class="btn btn-primary" asp-action="Agregar" asp-route-id="@item.Id">AGREGAR</a>
                                    <a class="btn btn-info" asp-action="Detalles" asp-route-id="@item.Id">VISTA</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>