@model IEnumerable<ajinomoto_app.Models.Pedido>

<div id="contenedor-tabla" class="table-responsive-md">
            <table class="table table-striped " style="font-size: 18px;">
                <thead class="thead-dark">
        <tr>
            <th>
                USUARIO
            </th>
            <th>
                PAGO
            </th>
            <th>
                FECHA
            </th>
            <th>
                HORA
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.UserID
            </td>
            <td>
                S/. @item.Total
            </td>
            <td>
                @item.Pago.FechaPago.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.Pago.FechaPago.ToString("HH:mm")
            </td>
            <td>

                <a asp-action="DetalleProducto" asp-route-id="@item.Id" class="btn btn-secondary" style="font-size: 15px;">DETALLES</a>
                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger" style="font-size: 15px;">ELIMINAR</a>
            
            </td>
        </tr>
}
       </tbody>
            </table>
        </div>